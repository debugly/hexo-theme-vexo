#about-banner
  width: 100%
  position: relative
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color: color-background
  height: 350px
  &:after
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    content: ''
    opacity: .25
    background: url(escheres-url)
    background-color: rgba(0, 0, 0, .05)
  @media m-mobile
    height: 250px
.author-content
  margin-top: -78px
  width: 100%
  background: color-background
  padding: 1.5em
  height: 100%

  box-sizing: border-box
  .head
    width: 100px
    height: 100px
    position: relative
    margin: 0 auto
    opacity: 1
    //transform: translateY(-55px)
    //transition: all .6s
    img
      width: 100%
      height: 100%
      display: block
      border-radius: 50%
      cursor: pointer
      transition: all 0.6s
      border: #fff solid 2px
      box-shadow: 0 0 5px #95a5a6
      &:hover
        transform: scale(1.4)
  h3
    font-size: 1.6em
    opacity: 0
    text-align: center
    transition-delay: 2s
    //transform: translateY(-35px)
    transition: all 2s

  .detail
    opacity: 0
    transform: translateY(-140px)
    transition: all 4s
    max-width: 980px
    margin: 0 auto;
    p
      line-height: 2em
      font-size: 1.1rem
    table
      font-size: 1.1rem
    thead
      font-size: 1.2rem
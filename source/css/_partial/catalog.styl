.catalog-container
  display: block
  overflow: hidden
  background-color: inherit
  position:absolute;
  top:0;
  bottom:0;
  right:0;
  height: auto;

  @media m-pad
    display: none

  .catalog-layout
    background-color: inherit
    padding: 10px
    align-items: flex-start
    display: flex
    border-top-left-radius: 5px
    border-bottom-left-radius: 5px

    .toc-indicator
      border-radius: 50%
      //background-color: #555
      height: 30px
      width: 30px
      cursor: pointer;
      :hover{
        //background-color: #5a5a5a;
        border-radius: 50%
        cursor: pointer;
      }
      label{
        height: 100%
        width: 100%
        text-align:center;
        display: block;
        overflow: hidden;
        img{
          padding-top: 2.5px
          height: 25px
          width: 15px
        }
      }
    .toc-main
      display:none
      width: 280px
      overflow: hidden
      box-sizing: border-box
      .toc-title
        font-size: 1.2em
        position: relative
        padding-left: 5px
        color: color-background

      .toc-nav
        padding: 0
        margin-top: 1em
      ol
        padding-left: 0px
      li
        list-style-type: none
        line-height: 1.5
        padding-left: 18px
        a
          color: color-background

#asideToggle {
  display: none;
  &:checked {
    & ~ aside {
      .catalog-layout{
        background-color: color-dark
        border: 1px solid color-border
      }
      .catalog-layout .toc-main{
          display: block;
      }
      .catalog-layout .toc-indicator{
        background-color: inherit;
        :hover{
          background-color: inherit;
        }
      }
      .catalog-layout .toc-indicator label img{
        transition: 0.70s;
        transform: rotate(180deg);
      }
    }
  }
}

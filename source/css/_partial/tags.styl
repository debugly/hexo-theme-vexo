#tag-cloud
  margin: 10px 0 0 0
  text-align: center
  font-size: 1.1rem
  a
    border: none
    line-height: 28px
    margin: 0 4px
    margin-bottom: 8px
    display: inline-block
    border-radius: 4px
    padding: 0 10px
    color: color-white
    transition: background .5s
    &:hover
      background: rgb(0, 133, 161)
  .tag0
    background: #bbe
  .tag1
    background: #9cb2e1
  .tag2
    background: #cb92e1
  .tag3
    background: #93935c
  .tag4
    background: #92e1cb
  .tag5
    background: #935c93

.tag-list
  margin: 0 2em

.tag-name
  font-size: 1.8em
  position: relative
  &:before
    content: "#"
    color: color-primary
    position: absolute;
    left: -.7em
    top: -2px
    font-size: 1.2em
    font-weight: 700
    
.tag-preview
  font-size: 1.2em
  padding-left: 1em
  li
    cursor: pointer
    margin: 10px 0
